.delivery_list_content{
  width: 100%;
}
/*列表项*/
.list_item{
  width:100%;
  position: relative;
  padding: 15px 0;
  border-bottom: 1px solid #f3f3f3;

}
.list_item .left{
  position: absolute;
  width: 10%;
  left: 0;
  top:28%;
}
.dot{
  width: 15px;
  height: 15px;
  border: 1px solid #999;
  border-radius: 50%;
  margin: 0 auto;
  position: relative;
}
.dot_selected{
  background: #3283fa;
}
.gou{
  width: 15px;
  height: 15px;
  object-fit: cover;
  position: absolute;
  top:0;
  
}
.list_item .mid{
  width: 70%;
  position: relative;
  margin: 0 auto;
  font-size: 14px;
}
.info_person{
  font-family: 700;
  padding-bottom:10px
}
.info_address{
  font-weight: 300;
}
.list_item .right{
  position: absolute;
  width: 10%;
  top:28%;
  right: 0;
}
.right .img{
  width: 20px;
  height: 20px;
  object-fit: cover;
}
.list_item:last-child{
  margin-bottom: 34px;
}
/*新增按钮*/
.add_btn{
  width: 100%;
  height: 50px;
  background: #fff;
  border-top:1px solid #999;
  position: fixed;
  bottom: 0;
  line-height:50px;
  text-align: center;
  letter-spacing: 1px;
}