/**index.wxss**/

.container {
  font: 12px/1.5 tahoma, arial, 'Hiragino Sans GB', '\5b8b\4f53', sans-serif;
  background: none;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

/*首页活动部分 */
.activity_index{
  text-align: center;
  margin-bottom: 20rpx;
  height: 350rpx;
  padding-bottom:20rpx; 
  background: #fff;
}
.activity_img{
  height: 100%;
  width: 100%;
  object-fit: cover;
}

/*分类*/
.category_index{
  margin-bottom:20rpx;
  font-size: 0;
  background: #fff;
}
.category_item{
  font-size: 30rpx;
  width:230rpx;
  padding:0 9rpx;
  height: 200rpx; 
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.category_img{
  width: 80rpx;
  height: 80rpx;
  margin-bottom:8rpx;
  object-fit: cover;
  display: block;
}
.category_item:not(:last-child){
  border-right:1px solid #f1f1f1;
}
/*优选列表*/
.pick_list{
  background: #fff;
  padding: 20rpx 0;
  position: relative;
}
.pick_tit{
  text-align: center;
  font-size:36rpx;
  margin-bottom: 30rpx;
}
.pick_item{
  width: 100%; 
  padding-bottom: 30rpx;
}
.loading_pick{
  padding: 24rpx 0;
  text-align: center;
  color:#aaa;
}
.zan-loadmore{
  margin: 0 auto;
}