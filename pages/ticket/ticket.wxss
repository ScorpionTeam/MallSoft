/* pages/ticket/ticket.wxss */

.ticket_container {
  background:#fff;
  padding-top: 29rpx;
}

.ticket_item {
  width: 95%;
  margin: 0 auto;
  height: 290rpx;
  border-radius: 16rpx;
}

/*卡券内容*/

.ticket_content {
  height: 150rpx;
  padding: 20rpx 0;
  border: 1px solid red;
  border-bottom: 0;
  border-top-left-radius: 14rpx;
  border-top-right-radius: 14rpx;
  color: red;
}

.content_lf {
  width: 30%;
  line-height: 150rpx;
  text-align: center;
}

.content_lf .money {
  font-size: 72rpx;
}

.content_rg {
  float: right;
  width: 65%;
  text-align: left;
}

.content_rg .least_money {
  font-size: 36rpx;
  margin-top: 20rpx;
  margin-bottom: 12rpx;
}

.content_rg .use_range {
  font-size: 22rpx;
}

/*卡券底部*/

.ticket_footer {
  border-left: 1px solid red;
  border-right: 1px solid red;
  background: red;
  height: 70rpx;
  color: #fff;
  font-size: 28rpx;
  padding: 0 15rpx;
  line-height: 70rpx;
  border-bottom-left-radius: 14rpx;
  border-bottom-right-radius: 14rpx;
}

.footer_lf, .footer_rg, .content_lf, .content_rg {
  display: inline-block;
  height: 100%;
}

.footer_lf {
  width: 30%;
  text-align: left;
}

.footer_rg {
  width: 50%;
  float: right;
  font-size: 24rpx;
  text-align: right;
}
